<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextActivity">

    <EditText
        android:id="@+id/etText"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@drawable/border_white"
        android:maxLines="1"
        android:lines="1"
        android:gravity="top"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etFileName"
        />
    <TextView
        android:id="@+id/lblFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/etText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etFileName"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"/>
    <EditText
        android:id="@+id/etFileName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginEnd="70dp"
        android:background="@drawable/border_white"
        app:layout_constraintTop_toBottomOf="@id/etText"
        app:layout_constraintStart_toEndOf="@id/lblFileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutButtons"
        android:layout_width="350dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/etFileName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="@string/cancelar"
            app:layout_constraintTop_toTopOf="@id/layoutButtons"
            app:layout_constraintStart_toStartOf="@id/layoutButtons"
            app:layout_constraintEnd_toStartOf="@id/btnGuardar"
            app:layout_constraintBottom_toBottomOf="@id/layoutButtons"
            />
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="@string/guardar"
            app:layout_constraintTop_toTopOf="@id/layoutButtons"
            app:layout_constraintStart_toEndOf="@id/btnCancelar"
            app:layout_constraintEnd_toEndOf="@id/layoutButtons"
            app:layout_constraintBottom_toBottomOf="@id/layoutButtons"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>