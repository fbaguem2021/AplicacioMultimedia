<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clApps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivInternet"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/border_icons"
            android:padding="5dp"
            android:src="@drawable/ic_internet_24"
            app:layout_constraintBottom_toTopOf="@+id/ivText"
            app:layout_constraintEnd_toStartOf="@id/ivMaps"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivMaps"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/border_icons"
            android:padding="5dp"
            android:src="@drawable/ic_maps_24"
            app:layout_constraintBottom_toTopOf="@+id/ivImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivInternet"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivText"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/text"
            android:padding="5dp"
            android:background="@drawable/border_icons"
            app:layout_constraintTop_toBottomOf="@id/ivInternet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivImage"
            app:layout_constraintBottom_toTopOf="@id/ivSound"/>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/border_icons"
            android:padding="5dp"
            android:src="@drawable/image"
            app:layout_constraintBottom_toTopOf="@id/ivVideo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivText"
            app:layout_constraintTop_toBottomOf="@id/ivMaps"/>

        <ImageView
            android:id="@+id/ivSound"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/sound"
            android:padding="5dp"
            android:background="@drawable/border_icons"
            app:layout_constraintTop_toBottomOf="@id/ivText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivVideo"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/ivVideo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/video"
            android:padding="5dp"
            android:background="@drawable/border_icons"
            app:layout_constraintTop_toBottomOf="@id/ivImage"
            app:layout_constraintStart_toEndOf="@id/ivSound"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>